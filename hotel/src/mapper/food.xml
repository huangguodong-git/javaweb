<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hgd.hotel.mapper.FoodMapper">
	<select id="findAll" resultType="com.hgd.hotel.po.Food">
		SELECT * FROM tb_food
	</select>
	<select id="findById" parameterType="int" resultType="com.hgd.hotel.po.Food">
		SELECT * FROM tb_food where id=#{id}
	</select>
	<select id="update" parameterType="com.hgd.hotel.po.Food">
		update 
			tb_food 
		set 
			food_name = #{foodName},
			foodType_id = #{foodTypeId},
			price = #{price},
			discount = #{discount},
			remark=#{remark},
			img =#{img},
			update_date =NOW(),
			disabled = #{disabled} 
		WHERE 
			id = #{id}
	</select>
</mapper>