<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <!--传统方式-->
    <package name="demo1" extends="struts-default" namespace="/demo1">
        <action name="demo1_save" class="com.hgd.struts.Demo1Action" method="save">
            <result name="success">/success.jsp</result>
        </action>
        <action name="demo1_delete" class="com.hgd.struts.Demo1Action" method="delete">
            <result name="success">/success.jsp</result>
        </action>
    </package>

    <package name="demo2" extends="struts-default" namespace="/demo2">
        <action name="demo2_*" class="com.hgd.struts.Demo2Action" method="${1}">
            <result name="success">/success.jsp</result>
        </action>
    </package>

    <package name="demo3" extends="struts-default" namespace="/demo2">
        <action name="demo3!*" class="com.hgd.struts.Demo3Action">
            <result name="success">/success.jsp</result>
        </action>
    </package>

</struts>